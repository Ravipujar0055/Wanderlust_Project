<% layout('/layouts/boilerplate')%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
    }
    .filters{
        text-align: center;
        margin-top: 2rem;
        margin-right:2rem;
        opacity: 0.7;
    }
    .filters:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filters p{
        font-size: 0.8rem;
    }
    
#filters {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between; /* spreads filters evenly */
  width: 100%;
  padding: 10px 20px;
  box-sizing: border-box;
}

.filters {
  flex: 1 1 auto;          /* filters expand to fill available space */
  max-width: 120px;        /* optional max width */
  /* rest same as above */
}

</style>

<div id="filters">
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Bedroom</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Mountain Cities</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Castles</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Swimming Poll</p>
    </div>  
    <div class="filters">
        <div><i class="fa-solid fa-house-flag"></i></div>
        <p>Camping</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>                     
</div>
<hr>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for(let list of allistings){%>
    <a href="/listings/<%=list._id%>" class="listing-dec">
        <div class="card listing-card" style="width: 18rem;">
        <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
        <p class="card-text">
        <b><%=list.title%></b><br>
        &#8377;<%=list.price.toLocaleString("en-IN")%> per night
        </p>
        </div>   
       </div>

    </a>
<%}%>   
</div>
</body>
